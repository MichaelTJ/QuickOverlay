<Window x:Class="SydneyOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="500" Width="525"
        WindowState="Maximized">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open" Name="btnOpen"
                          Click="btnOpen_Click"/>
                <MenuItem Header="_Save"/>
                <MenuItem Header="_Close"/>
            </MenuItem>
        </Menu>
        <DockPanel DockPanel.Dock="Left">
            <TextBlock DockPanel.Dock="Top" Text="Areas:" 
                Margin="10,10,0,0"/>
            <ComboBox
                DockPanel.Dock="Top"
                HorizontalAlignment="Left"
                Margin="10,10,0,0"
                VerticalAlignment="Top"
                Width="200"
                Loaded="ComboBox_Areas_Loaded"
                SelectionChanged="ComboBox_Areas_SelectionChanged"/>

            <TextBlock DockPanel.Dock="Top" Text="Criterias:" 
                Margin="10,10,0,0"/>

            <ComboBox
                DockPanel.Dock="Top"
                HorizontalAlignment="Left"
                Margin="10,10,0,0"
                VerticalAlignment="Top"
                Width="200"
                Loaded="ComboBox_Criterias_Loaded"
                SelectionChanged="ComboBox_Criterias_SelectionChanged"/>

            <TextBlock DockPanel.Dock="Top" Text="Comments:" 
                Margin="10,10,0,0"/>
            <TextBox 
                DockPanel.Dock="Top"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="10,10,0,0"
                Width="200"
                Height="200"/>
            <Button
                Content="Write"
                DockPanel.Dock="Top"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="10,10,0,0"
                Width="200"
                Click="Write_Button_Click"
                />
            <Button
                Content="Save"
                DockPanel.Dock="Top"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="10,10,0,0"
                Width="200"/>
        </DockPanel>
        <Image DockPanel.Dock="Right" Name="imgPhoto" Margin="10,10,10,10"/>
    </DockPanel>
</Window>
