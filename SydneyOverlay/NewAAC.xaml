<Window x:Class="SydneyOverlay.NewAAC"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Set" Height="100" Width="300">
    <DockPanel>
        <Label DockPanel.Dock="Top"
               Content="Name:"
               />
        <TextBox DockPanel.Dock="Top"
                 Name="txtBoxName"
                 />
        <Grid DockPanel.Dock="Bottom">
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0"
                    Content="Cancel"
                    Name="btnCancel"
                    Click="btnCancel_Click"
                    />
            <Button Grid.Row="0"
                    Grid.Column="1"
                    Content="Save"
                    Name="btnSave"
                    Click="btnSave_Click"/>
        </Grid>
        
    </DockPanel>
</Window>
